{
  "name": "vscode-react-native-package-checker",
  "displayName": "React Native Package Checker",
  "description": "Simplify Your New Architecture Migration",
  "version": "0.0.1",
  "publisher": "sandipshiwakoti",
  "repository": {
    "type": "git",
    "url": "https://github.com/sandipshiwakoti/vscode-react-native-package-checker"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/sandipshiwakoti/vscode-react-native-package-checker/issues"
  },
  "homepage": "https://github.com/sandipshiwakoti/vscode-react-native-package-checker#readme",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:json"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "reactNativePackageChecker.enableCodeLens",
        "title": "Show package checker details",
        "icon": {
          "light": "./assets/toggle-disabled-light.svg",
          "dark": "./assets/toggle-disabled-dark.svg"
        }
      },
      {
        "command": "reactNativePackageChecker.disableCodeLens",
        "title": "Hide package checker details",
        "icon": {
          "light": "./assets/toggle-enabled-light.svg",
          "dark": "./assets/toggle-enabled-dark.svg"
        }
      },
      {
        "command": "reactNativePackageChecker.showPackageDetails",
        "title": "Package Checker: Show Details"
      },
      {
        "command": "reactNativePackageChecker.showChecker",
        "title": "Package Checker: Check All"
      },
      {
        "command": "reactNativePackageChecker.openInBrowser",
        "title": "Package Checker: Open in Browser"
      }
    ],
    "menus": {
      "editor/title": [
        {
          "command": "reactNativePackageChecker.disableCodeLens",
          "when": "resourceExtname == .json && resourceFilename =~ /package\\.json$/ && reactNativePackageChecker.enabled",
          "group": "navigation"
        },
        {
          "command": "reactNativePackageChecker.enableCodeLens",
          "when": "resourceExtname == .json && resourceFilename =~ /package\\.json$/ && !reactNativePackageChecker.enabled",
          "group": "navigation"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "bun run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "bun run compile && bun run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.74.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@typescript-eslint/eslint-plugin": "^8.39.0",
    "@typescript-eslint/parser": "^8.39.0",
    "eslint": "^9.32.0",
    "typescript": "^5.9.2",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2"
  }
}
