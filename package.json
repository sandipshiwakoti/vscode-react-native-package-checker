{
  "name": "vscode-react-native-package-checker",
  "displayName": "React Native Package Checker",
  "description": "Simplify Your New Architecture Migration",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:json"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "reactNativePackageChecker.refreshCodeLens",
        "title": "Refresh Package Status",
        "category": "React Native Package Checker"
      },
      {
        "command": "reactNativePackageChecker.toggleCodeLens",
        "title": "Disable React Native Package Checker",
        "category": "React Native Package Checker",
        "icon": {
          "light": "./assets/toggle-enabled-light.svg",
          "dark": "./assets/toggle-enabled-dark.svg"
        }
      },
      {
        "command": "reactNativePackageChecker.enableCodeLens",
        "title": "Enable React Native Package Checker",
        "category": "React Native Package Checker",
        "icon": {
          "light": "./assets/toggle-disabled-light.svg",
          "dark": "./assets/toggle-disabled-dark.svg"
        }
      },
      {
        "command": "reactNativePackageChecker.showPackageDetails",
        "title": "Show Package Details"
      }
    ],
    "menus": {
      "editor/title": [
        {
          "command": "reactNativePackageChecker.toggleCodeLens",
          "when": "resourceExtname == .json && resourceFilename =~ /package\\.json$/ && config.reactNativePackageChecker.enableCodeLens",
          "group": "navigation"
        },
        {
          "command": "reactNativePackageChecker.enableCodeLens",
          "when": "resourceExtname == .json && resourceFilename =~ /package\\.json$/ && !config.reactNativePackageChecker.enableCodeLens",
          "group": "navigation"
        }
      ]
    },
    "configuration": {
      "title": "React Native Package Checker",
      "properties": {
        "reactNativePackageChecker.enableCodeLens": {
          "type": "boolean",
          "default": true,
          "scope": "window",
          "description": "Show New Architecture compatibility status for React Native packages"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "bun run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "bun run compile && bun run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.74.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@typescript-eslint/eslint-plugin": "^8.39.0",
    "@typescript-eslint/parser": "^8.39.0",
    "eslint": "^9.32.0",
    "typescript": "^5.9.2",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2"
  }
}
